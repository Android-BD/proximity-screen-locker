<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/main_serviceRunningStatus_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_service_is_not_running" />

    <Button
        android:id="@+id/main_startService_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_start_service" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_uninstall_message" />

        <Button
            android:id="@+id/main_disableAdmin_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_remove_from_admins" />
    </LinearLayout>

</LinearLayout>